<UserControl x:Class="CustomWorkBundler.UI.CustomConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomWorkBundler.UI"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Text="{Binding ConnectionString}" HorizontalAlignment="Stretch" Margin="0 0 20 0"/>
            <Button Grid.Column="1" Command="{Binding ConnectionDialogCommand}" >...</Button>
        </Grid>
    </StackPanel>
</UserControl>
